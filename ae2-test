-- Funktion, um die Anzahl der Item-Zellen in allen Drives zu z√§hlen
function countItemCells()
    local bridge = peripheral.find("me_bridge")
    if not bridge then
        print("Kein ME-Bridge gefunden.")
        return 0
    end

    local drives = bridge.getDrives() or {}
    local cellCount = 0

    for _, drive in pairs(drives) do
        if drive.cells then
            for _, cell in pairs(drive.cells) do
                if cell.type == "ITEM_STORAGE" then
                    cellCount = cellCount + 1
                end
            end
        end
    end

    return cellCount
end

-- Main
local items = countItemCells()
print("Anzahl Item-Zellen in Drives: " .. items)

-- Finde die Peripherien
local bridge = peripheral.find("me_bridge")
local monitor = peripheral.find("monitor")

if not bridge then
    print("Keine ME-Bridge gefunden!")
    return
end

if not monitor then
    print("Kein Monitor gefunden!")
    return
end

-- Funktion, die einen Crafting-Job abruft
function getCraftingJob(id)
    -- Beispielaufruf: tatsächliche Implementierung hängt von deinem Setup ab
    local job = bridge.getCraftingJob(id)
    return job
end

-- Monitor vorbereiten
monitor.clear()
monitor.setCursorPos(1,1)
monitor.setTextScale(1) -- optional: Textgröße anpassen

-- Beispiel: Crafting-Job mit ID 1 abrufen
local jobID = 1
local job = getCraftingJob(jobID)

if job then
    monitor.write("Crafting Job ID: " .. jobID .. "\n")
    monitor.write("Status: " .. tostring(job.status) .. "\n")
    monitor.write("Item: " .. tostring(job.item) .. "\n")
    monitor.write("Menge: " .. tostring(job.amount) .. "\n")
else
    monitor.write("Kein Crafting Job mit ID " .. jobID .. " gefunden.")
end

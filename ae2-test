-- Function to get used and max item types (AE2 = 63 Types pro Item Cell)
function getItemTypes()
    local used, max = 0, 0
    local bridge = peripheral.find("me_bridge")
    if bridge then
        local items = bridge.getItems() or {}
        used = #items

        local cells = bridge.getCells() or {}
        for _, cell in pairs(cells) do
            if cell.isItem then
                max = max + 63
            end
        end
    end
    return used, max
end

-- Function to get used and max fluid types (AE2 = 63 Types pro Fluid Cell)
function getFluidTypes()
    local used, max = 0, 0
    local bridge = peripheral.find("me_bridge")
    if bridge then
        local fluids = bridge.getFluids() or {}
        used = #fluids

        local cells = bridge.getCells() or {}
        for _, cell in pairs(cells) do
            if cell.isFluid then
                max = max + 63
            end
        end
    end
    return used, max
end

-- Function to get used and max chemical types
-- (AE2 selbst hat keine Chemicals â†’ nur Mekanism Integration, falls vorhanden)
function getChemicalTypes()
    local used, max = 0, 0
    local bridge = peripheral.find("me_bridge")
    if bridge then
        local chems = bridge.getChemicals() or {}
        used = #chems

        local cells = bridge.getCells() or {}
        for _, cell in pairs(cells) do
            if cell.isChemical then
                max = max + 63
            end
        end
    end
    return used, max
end
